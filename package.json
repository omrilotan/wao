{
  "name": "wrong-answers-only-game",
  "private": true,
  "type": "module",
  "scripts": {
    "clean": "rm -rf docs",
    "start": "node --watch-path=src/public/sets --experimental-strip-types scripts/prepare.ts & parcel src/index.pug --out-dir docs & node --watch-path=src/public --experimental-strip-types scripts/copy.ts",
    "prebuild": "rm -rf docs && node --experimental-strip-types scripts/prepare.ts",
    "build": "parcel build src/index.pug --out-dir docs --public-url .",
    "postbuild": "node --experimental-strip-types scripts/copy.ts",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "parcel-bundler": "^1.12.5",
    "prettier": "^3.4.2",
    "pug": "^3.0.3",
    "typescript": "^5.7.3"
  }
}
